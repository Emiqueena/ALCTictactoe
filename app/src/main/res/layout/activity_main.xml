<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DDEED4"
    tools:context="com.example.android.alcnew.MainActivity">

        <RelativeLayout
            android:id="@+id/score_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/xf"
                    android:id="@+id/p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:src="@drawable/of"
                    android:id="@+id/p2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:freezesText="true"/>

                <TextView
                    android:id="@+id/text_view_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="---"
                    android:layout_toRightOf="@id/p1"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/text_view_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="---"
                    android:layout_toLeftOf="@id/p2"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:textSize="50sp" />

                </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/score_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/button_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_01"
            android:layout_toRightOf="@id/button_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_02"
            android:layout_toRightOf="@id/button_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_10"
            android:layout_below="@id/button_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_below="@id/button_01"
            android:layout_toRightOf="@id/button_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_12"
            android:layout_below="@id/button_02"
            android:layout_toRightOf="@id/button_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_20"
            android:layout_below="@id/button_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_below="@id/button_11"
            android:layout_toRightOf="@id/button_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_22"
            android:layout_below="@id/button_12"
            android:layout_toRightOf="@id/button_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A7B980"
            android:textColor="#000000"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:freezesText="true"
            android:textSize="60sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/board_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

                <ImageView
                    android:src="@drawable/tp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:src="@drawable/resetgame"
                    android:id="@+id/button_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#82C358"/>

                <ImageButton
                    android:src="@drawable/resetbutt"
                    android:layout_toRightOf="@id/button_reset"
                    android:id="@+id/board_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#82C358"
                    android:onClick="resetBoard"/>

        </RelativeLayout>
</RelativeLayout>